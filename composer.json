{
  "config": {
    "platform": {
      "php": "7.2.28"
    }
  },
  "require": {
    "twig/twig": "^1.0",
    "jasig/phpcas": "^1.3",
    "ralouphie/mimey": "^2.1",
    "vlucas/phpdotenv": "^4.1.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5.4",
    "squizlabs/php_codesniffer": "^3.5.5"
  },
  "scripts": {
    "post-update-cmd": [
      "cp bin/pre-commit .git/hooks/pre-commit",
      "chmod a+x .git/hooks/pre-commit",
      "cp bin/pre-push .git/hooks/pre-push",
      "chmod a+x .git/hooks/pre-push"
    ],
    "post-install-cmd": [
      "cp bin/pre-commit .git/hooks/pre-commit",
      "chmod a+x .git/hooks/pre-commit",
      "cp bin/pre-push .git/hooks/pre-push",
      "chmod a+x .git/hooks/pre-push"
    ]
  }
}
