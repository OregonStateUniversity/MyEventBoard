{% extends 'layouts/logged_in.twig' %}

{% block page_content %}

<h1 class="h2 mb-4">
  {{title}}
</h1>
<form enctype="multipart/form-data" method="post">
  {{ include('meetings/_meeting_dates_form_fields.twig') }}
  <div class="pt-4">
    <button class="btn btn-success">
      Save Meeting
    </button>
    <a class="ml-3" href="{{site_url}}/meetings/{{meeting.id}}">
      Cancel
    </a>
  </div>
</form>
<div class="modal fade" id="change-duration-modal" tabindex="-1" role="dialog" aria-labelledby="change-duration-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="change-duration-modal-label">Update Timeslot Duration</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          Are you sure you want to change the duration? Attendees of this meeting
          will have their timeslots removed and will receive a notice to sign up again.
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="btn-change-duration">Update</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="remove-date-modal" tabindex="-1" role="dialog" aria-labelledby="remove-date-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="remove-date-modal-label">Remove Date</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          Are you sure you want to remove this date? Attendees who reserved times on this date
          will be removed and will receive a notice to sign up again.
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="btn-remove-date">Remove</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="remove-time-modal" tabindex="-1" role="dialog" aria-labelledby="remove-time-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="remove-time-modal-label">Remove Time</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          Are you sure you want to remove this time? Attendees who reserved this time
          will be removed and will receive a notice to sign up again.
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="btn-remove-time">Remove</button>
      </div>
    </div>
  </div>
</div>

{% endblock %}
