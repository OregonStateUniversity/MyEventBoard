{% extends 'layouts/logged_in.twig' %}

{% block page_content %}

<h1 class="h2 mb-4">
  {{title}}
</h1>
<div class="row">
  <div class="col-md-6">
    <div class="card {{ meeting.hostName == 'Me' ? 'card-mine' }}">
      <div class="card-body">
        <h4 class="h6 mb-0">
          Location
        </h4>
        <p>
          {{meeting.location}}
        </p>
        <h4 class="h6 mb-0">
          Description
        </h4>
        <p>
          {{meeting.description}}
        </p>
        <h4 class="h6 mb-0">
          Host
        </h4>
        <p>
          <a href="mailto:{{meeting.hostEmail}}">
            {{meeting.hostName}}
          </a>
        </p>
        <h4 class="h6 mb-0">
          Host Meeting File
        </h4>
        <p>
          <a href="#">
            file.pdf
          </a>
        </p>
      </div>
    </div>
  </div>
</div>
<hr>
<form method="post">
  <div class="row">
    <div class="col-md-6">
      <div class="card mb-4 {{ meeting.hostName == 'Me' ? 'card-mine' }}">
        <div class="card-body">
          <div class="form-group">
            <label class="h6">File Upload</label>
            <p>
              You may only upload a single file. Uploading a second file will overwrite the first.
              If you need to upload multiple files combine them into a single zip file.
            </p>
            <input class="form-control-file" type="file">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mb-4">
    <label class="h6">Select a Time Slot</label>
    {{ include('meetings/_date_table.twig') }}
  </div>
  {% if meeting.hostName == 'Me' %}
    <p class="text-danger">You can't Invite to your own meeting.</p>
  {% else %}
    <div class="pt-4">
      <button class="btn btn-success">
        Save Invite
      </button>
      <a class="ml-3" href="{{site_url}}/meetings">
        Cancel
      </a>
    </div>
  {% endif %}
</form>
{% if meeting.hostName != 'Me' %}
  <p class="mt-5">
    <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#decline-meeting-modal" type="button">
      Decline Meeting
    </button>
  </p>
  <div class="modal fade" id="decline-meeting-modal" tabindex="-1" role="dialog" aria-labelledby="decline-meeting-modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="decline-meeting-modal-label">Decline Meeting</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Are you sure you want to decline this meeting?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger">Decline</button>
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% endblock %}
