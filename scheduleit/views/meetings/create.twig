{% extends 'layouts/logged_in.twig' %}

{% block page_content %}

<h1 class="h2 mb-4">
  {{title}}
</h1>
{{ include('meetings/_meeting_form.twig') }}

{% endblock %}

{% block page_footer %}

<script>
  document.addEventListener("DOMContentLoaded", function() {
    var calendarElement = document.getElementById("calendar");
    var calendar = new FullCalendar.Calendar(calendarElement, {
      initialView: "dayGridMonth",
      dateClick: function(info) {
        if (info.dayEl.classList.contains('active')) {
          info.dayEl.classList.remove('active');
          // TODO: Remove from time table
        } else {
          info.dayEl.classList.add('active');
          // TODO: Add to time table
        }
      }
    });
    calendar.render();
  });
</script>

{% endblock %}
