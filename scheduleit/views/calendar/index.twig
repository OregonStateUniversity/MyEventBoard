{% extends 'layouts/logged_in.twig' %}

{% block page_content %}

<h1 class="h2 mb-4">
  {{title}}
</h1>
<div class="mb-4">
  <div class="d-inline-block mr-3">
    <span class="d-inline-block mr-2 px-2 py-1 meeting-mine"></span>
    Meetings Created By Me
  </div>
  <div class="d-inline-block ">
    <span class="d-inline-block mr-2 px-2 py-1 meeting-other"></span>
    Meetings Created By Others
  </div>
</div>
<div id="calendar"></div>

{% endblock %}

{% block page_footer %}

<script>
  document.addEventListener("DOMContentLoaded", function() {
    var calendarElement = document.getElementById("calendar");
    var calendar = new FullCalendar.Calendar(calendarElement, {
      initialView: "dayGridMonth",
      events: [
        {
          classNames: ["meeting-mine"],
          title: "Don's Meeting",
          url: "{{site_url}}/meetings/1",
          start: "2020-07-17T12:00:00"
        },
        {
          classNames: ["meeting-other"],
          title: "Mike's Meeting",
          url: "{{site_url}}/meetings/2",
          start: "2020-07-18T12:00:00"
        },
        {
          classNames: ["meeting-other"],
          title: "Roman's Meeting",
          url: "{{site_url}}/meetings/3",
          start: "2020-07-19T11:00:00"
        },
      ]
    });
    calendar.render();
  });
</script>

{% endblock %}
